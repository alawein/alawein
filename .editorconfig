# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# JavaScript, TypeScript, JSON
[*.{js,ts,json,jsonc}]
indent_style = space
indent_size = 2
max_line_length = 120

# Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown (Documentation Governance)
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 80
insert_final_newline = true

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 2

# Configuration files
[*.{toml,ini}]
indent_style = space
indent_size = 2

# Package files
[package.json]
indent_style = space
indent_size = 2
