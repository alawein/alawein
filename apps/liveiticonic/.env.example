# Live It Iconic - Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# Supabase Configuration
# =============================================================================
# Get these from: https://app.supabase.com/project/_/settings/api

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Server-side only (DO NOT expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# Stripe Configuration
# =============================================================================
# Get these from: https://dashboard.stripe.com/apikeys

# Public key (safe to expose to client)
VITE_STRIPE_PUBLIC_KEY=pk_test_your-publishable-key-here

# Secret key (SERVER-SIDE ONLY - never expose to client)
STRIPE_SECRET_KEY=sk_test_your-secret-key-here

# Webhook secret from Stripe CLI or dashboard
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# =============================================================================
# Email Configuration (Resend)
# =============================================================================
# Get API key from: https://resend.com/api-keys

RESEND_API_KEY=re_your-api-key-here

# Email sender (must be verified in Resend)
EMAIL_FROM=orders@liveiticonic.com

# =============================================================================
# Application Configuration
# =============================================================================

# API base URL (development)
VITE_API_URL=http://localhost:8080/api

# Production URL (for email links, etc.)
VITE_APP_URL=http://localhost:8080

# =============================================================================
# Feature Flags (Optional)
# =============================================================================

# Enable analytics tracking
VITE_ENABLE_ANALYTICS=false

# Enable Stripe test mode
VITE_STRIPE_TEST_MODE=true

# Enable debug logging
VITE_DEBUG=false

# =============================================================================
# YouTube Integration (Optional)
# =============================================================================

VITE_YOUTUBE_API_KEY=your-youtube-api-key-here
VITE_YOUTUBE_CHANNEL_ID=your-channel-id-here

# =============================================================================
# Twitch Integration (Optional)
# =============================================================================

VITE_TWITCH_CLIENT_ID=your-twitch-client-id-here

# =============================================================================
# Development Only
# =============================================================================

# Vite server port
VITE_PORT=8080

# Enable hot module replacement
VITE_HMR=true

# =============================================================================
# Security Notes
# =============================================================================
#
# NEVER commit .env.local to git!
# NEVER expose STRIPE_SECRET_KEY or SUPABASE_SERVICE_ROLE_KEY to the client!
#
# For production, set these in your Vercel dashboard:
# https://vercel.com/your-project/settings/environment-variables
#
# =============================================================================
