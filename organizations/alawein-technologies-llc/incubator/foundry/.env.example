# Environment Configuration Template
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# Application URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_GHOST_RESEARCHER_URL=http://localhost:3000
NEXT_PUBLIC_SCIENTIFIC_TINDER_URL=http://localhost:3001
NEXT_PUBLIC_CHAOS_ENGINE_URL=http://localhost:3002

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/crazyideas
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=crazyideas
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database Replication (Production)
POSTGRES_REPLICATION_MODE=master
POSTGRES_REPLICATION_USER=replicator
POSTGRES_REPLICATION_PASSWORD=replicator_password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Email (Development uses Mailhog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@crazyideas.com

# Storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=crazyideas-uploads

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=
NEXT_PUBLIC_HOTJAR_ID=

# API Keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_MAPS_API_KEY=
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
ALLOWED_HOSTS=localhost,127.0.0.1
SESSION_SECRET=your-session-secret-change-in-production
ENCRYPTION_KEY=32-character-encryption-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
FEATURE_GHOST_RESEARCHER_ENABLED=true
FEATURE_SCIENTIFIC_TINDER_ENABLED=true
FEATURE_CHAOS_ENGINE_ENABLED=true
FEATURE_MAINTENANCE_MODE=false

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Docker Registry (for CI/CD)
REGISTRY=ghcr.io
IMAGE_PREFIX=your-github-username/crazyideas

# Vercel (for deployment)
VERCEL_TOKEN=
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# GitHub Actions Secrets
GITHUB_TOKEN=
SNYK_TOKEN=
SONAR_TOKEN=
SONAR_HOST_URL=

# Slack Notifications
SLACK_WEBHOOK=

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin