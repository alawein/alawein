# HELIOS Environment Configuration
# Copy this file to .env and fill in your configuration

# ============================================
# LLM Provider Configuration
# ============================================

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4              # gpt-4 or gpt-3.5-turbo for faster/cheaper
OPENAI_TEMPERATURE=0.7          # 0.0-1.0, higher = more creative
OPENAI_MAX_TOKENS=2048          # Max tokens per request

# Anthropic Configuration
# Get your API key from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-opus-4   # Latest Claude model
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=2048

# Google Configuration
# Get your API key from: https://ai.google.dev
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro         # Google's generative model
GOOGLE_TEMPERATURE=0.7

# Primary LLM Provider
# Options: openai, anthropic, google
HELIOS_LLM_PROVIDER=openai

# ============================================
# HELIOS Configuration
# ============================================

# Hypothesis Generation
HELIOS_NUM_HYPOTHESES=5              # Default number of hypotheses
HELIOS_HYPOTHESIS_TEMPERATURE=0.7    # Creativity level for generation
HELIOS_HYPOTHESIS_TIMEOUT=60         # Timeout in seconds

# Validation
HELIOS_VALIDATION_TIMEOUT=300        # Total validation timeout (seconds)
HELIOS_VALIDATION_STRATEGY=turing    # Validation approach
HELIOS_ENABLE_INTERROGATION=true     # Enable 200-question framework

# Learning
HELIOS_ENABLE_LEARNING=true          # Enable meta-learning
HELIOS_LEARNING_DATABASE=memory      # memory or database
HELIOS_DATABASE_PATH=./helios_db     # Path to learning database

# Paper Generation
HELIOS_GENERATE_PAPER=false          # Auto-generate papers
HELIOS_PAPER_FORMAT=markdown         # markdown or pdf
HELIOS_PAPER_INCLUDE_PROOFS=true     # Include mathematical proofs

# ============================================
# Domain Configuration
# ============================================

# Default research domain
HELIOS_DEFAULT_DOMAIN=ml             # quantum, materials, optimization, ml, nas, synthesis, graph

# Domain-specific settings

# Quantum Domain
HELIOS_QUANTUM_BACKEND=qiskit        # qiskit or cirq
HELIOS_QUANTUM_SIMULATOR_SHOTS=1000  # Simulation shots

# ML Domain
HELIOS_ML_FRAMEWORK=torch            # torch or tensorflow
HELIOS_ML_DEVICE=cpu                 # cpu or cuda (if available)

# Optimization Domain
HELIOS_OPTIMIZATION_SOLVER=pulp      # Solver for optimization

# ============================================
# Database & Storage
# ============================================

# Hall of Failures Database
HELIOS_HOF_DATABASE_TYPE=memory      # memory or sqlite
HELIOS_HOF_DATABASE_PATH=./hof.db    # Path to HOF database
HELIOS_HOF_SYNC_INTERVAL=300         # Sync interval (seconds)

# Results Storage
HELIOS_RESULTS_DIR=./results         # Directory for experiment results
HELIOS_ENABLE_RESULTS_CACHING=true   # Cache validation results

# ============================================
# Logging & Debugging
# ============================================

# Logging Configuration
HELIOS_LOG_LEVEL=INFO                # DEBUG, INFO, WARNING, ERROR, CRITICAL
HELIOS_LOG_FILE=helios.log           # Log file path (empty = stdout only)
HELIOS_LOG_FORMAT=detailed           # simple or detailed

# Debug Mode
HELIOS_DEBUG=false                   # Enable debug output
HELIOS_DEBUG_VERBOSE=false           # Very verbose debugging
HELIOS_SAVE_INTERMEDIATE=false       # Save intermediate results

# ============================================
# Performance & Resource Limits
# ============================================

# Computation
HELIOS_MAX_WORKERS=4                 # Max parallel workers
HELIOS_TIMEOUT_PER_HYPOTHESIS=60     # Per-hypothesis timeout (seconds)

# Memory
HELIOS_MAX_MEMORY_GB=8               # Max memory usage (GB)
HELIOS_BATCH_SIZE=10                 # Batch size for processing

# ============================================
# API & Network
# ============================================

# Network Configuration
HELIOS_REQUEST_TIMEOUT=30            # HTTP request timeout (seconds)
HELIOS_RETRY_ATTEMPTS=3              # Retry failed requests
HELIOS_RETRY_BACKOFF=1.5             # Exponential backoff multiplier

# Proxy Configuration (if needed)
# HELIOS_HTTP_PROXY=http://proxy:8080
# HELIOS_HTTPS_PROXY=https://proxy:8080

# ============================================
# Research Workflow
# ============================================

# Workflow Settings
HELIOS_WORKFLOW_TYPE=sequential      # sequential or parallel
HELIOS_SAVE_WORKFLOW_STATE=true      # Save workflow checkpoints
HELIOS_RESUME_FROM_CHECKPOINT=false  # Resume interrupted workflows

# ============================================
# Development
# ============================================

# Development Settings
HELIOS_DEVELOPMENT_MODE=false        # Enable dev features
HELIOS_MOCK_LLM_RESPONSES=false      # Use mock LLM for testing
HELIOS_INCLUDE_ANALYTICS=false       # Track usage analytics

# Notes:
# 1. API Keys are sensitive - never commit .env files
# 2. Copy .env.example to .env and fill in your values
# 3. .env is loaded automatically on HELIOS import
# 4. Environment variables override these defaults
# 5. For production, use secure key management systems
