digraph MEZAN_Causal {
    rankdir=LR;
    node [shape=box, style=rounded];

    // Nodes
    problem_size [label="Problem Size", fillcolor=lightblue, style=filled];
    search_space_size [label="Search Space Size", fillcolor=lightblue, style=filled];
    constraint_complexity [label="Constraint Complexity", fillcolor=lightblue, style=filled];
    objective_smoothness [label="Objective Function Smoothness", fillcolor=lightblue, style=filled];
    exploration_capability [label="Exploration Capability", fillcolor=lightgreen, style=filled];
    exploitation_capability [label="Exploitation Capability", fillcolor=lightgreen, style=filled];
