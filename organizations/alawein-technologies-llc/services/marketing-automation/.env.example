# Marketing Automation Platform - Environment Variables

# ==================== GENERAL ====================
NODE_ENV=development
LOG_LEVEL=info

# ==================== DATABASE ====================
POSTGRES_PASSWORD=your_postgres_password
MONGO_PASSWORD=your_mongo_password
DATABASE_URL=postgresql://admin:your_postgres_password@localhost:5432/marketing_automation
MONGODB_URL=mongodb://admin:your_mongo_password@localhost:27017/marketing_automation
REDIS_URL=redis://localhost:6379

# ==================== API GATEWAY ====================
JWT_SECRET=your_very_long_secret_key_here_min_32_chars
ALLOWED_ORIGINS=http://localhost:3010,http://localhost:3000

# ==================== AI SERVICES ====================
OPENAI_API_KEY=sk-your_openai_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# ==================== SOCIAL MEDIA PLATFORMS ====================
# Instagram
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_USER_ID=your_instagram_user_id

# Facebook
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
FACEBOOK_PAGE_ID=your_facebook_page_id

# Twitter/X
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
TWITTER_USER_ID=your_twitter_user_id

# LinkedIn
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# TikTok
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token

# YouTube
YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_ACCESS_TOKEN=your_youtube_access_token
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token

# ==================== EMAIL SERVICES ====================
# SendGrid
SENDGRID_API_KEY=SG.your_sendgrid_key_here
DEFAULT_FROM_EMAIL=noreply@yourcompany.com

# SMTP (Alternative to SendGrid)
EMAIL_PROVIDER=sendgrid
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Mailchimp
MAILCHIMP_API_KEY=your_mailchimp_key-us1

# ==================== CRM SYSTEMS ====================
# HubSpot
HUBSPOT_API_KEY=your_hubspot_api_key

# Salesforce
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password

# ==================== E-COMMERCE ====================
# Shopify
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token

# WooCommerce
WOOCOMMERCE_URL=https://yourstore.com
WOOCOMMERCE_CONSUMER_KEY=ck_your_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=cs_your_consumer_secret

# ==================== ANALYTICS ====================
# Google Analytics
GOOGLE_ANALYTICS_VIEW_ID=your_view_id
GOOGLE_ANALYTICS_CLIENT_EMAIL=your_service_account@your-project.iam.gserviceaccount.com
GOOGLE_ANALYTICS_PRIVATE_KEY=your_private_key

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# ==================== PAYMENT PROCESSORS ====================
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ==================== CLOUD STORAGE ====================
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=marketing-automation-assets

# ==================== MESSAGE QUEUE ====================
RABBITMQ_PASSWORD=your_rabbitmq_password
RABBITMQ_URL=amqp://admin:your_rabbitmq_password@localhost:5672

# ==================== OTHER INTEGRATIONS ====================
# Zapier
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your_webhook_id

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_webhook_url
SLACK_BOT_TOKEN=xoxb-your-bot-token

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url
