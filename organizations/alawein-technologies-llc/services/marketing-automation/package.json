{
  "name": "@marketing-automation/platform",
  "version": "1.0.0",
  "description": "Comprehensive AI-powered marketing automation platform",
  "private": true,
  "workspaces": [
    "services/*",
    "shared/*",
    "frontend/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:content\" \"npm run dev:social\" \"npm run dev:email\" \"npm run dev:visual\" \"npm run dev:scheduling\" \"npm run dev:analytics\"",
    "dev:gateway": "npm run dev --workspace=services/api-gateway",
    "dev:content": "npm run dev --workspace=services/content-generation",
    "dev:social": "npm run dev --workspace=services/social-media",
    "dev:email": "npm run dev --workspace=services/email-marketing",
    "dev:visual": "npm run dev --workspace=services/visual-content",
    "dev:scheduling": "npm run dev --workspace=services/scheduling",
    "dev:analytics": "npm run dev --workspace=services/analytics",
    "dev:integrations": "npm run dev --workspace=services/integrations",
    "dev:personalization": "npm run dev --workspace=services/personalization",
    "dev:compliance": "npm run dev --workspace=services/compliance",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "install:all": "npm install && npm run install --workspaces",
    "migrate": "npm run migrate --workspace=shared/database",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "deploy": "npm run build && npm run deploy:services"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "marketing-automation",
    "ai",
    "content-generation",
    "social-media",
    "email-marketing",
    "analytics",
    "microservices"
  ],
  "author": "Marketing Automation Platform",
  "license": "MIT"
}
