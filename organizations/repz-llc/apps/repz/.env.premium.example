# Stripe Configuration for Premium Subscriptions
# Copy this to .env.local and fill in your actual keys

# Stripe Public Key (starts with pk_test_ or pk_live_)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_publishable_key_here

# Stripe Secret Key (starts with sk_test_ or sk_live_)
# This should be set in Supabase Edge Functions environment
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe Webhook Secret (starts with whsec_)
# Get this from Stripe Dashboard > Developers > Webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Application URLs
VITE_APP_URL=http://localhost:5173
VITE_API_URL=https://your-project.supabase.co/functions/v1

# Premium Plan Configuration
VITE_PREMIUM_MONTHLY_PRICE=1999  # $19.99 in cents
VITE_PREMIUM_YEARLY_PRICE=19999  # $199.99 in cents

# Feature Flags
VITE_ENABLE_PREMIUM_SUBSCRIPTIONS=true
VITE_ENABLE_STRIPE_TEST_MODE=true
