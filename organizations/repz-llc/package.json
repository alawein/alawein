{
  "name": "repz-platform",
  "version": "1.0.0",
  "description": "Complete fitness coaching platform with client and coach portals",
  "main": "index.js",
  "scripts": {
    "dev": "cd apps/repz && npm run dev",
    "build": "cd apps/repz && npm run build",
    "preview": "cd apps/repz && npm run preview",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
