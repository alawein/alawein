{
  "name": "@alawein/shared-schemas",
  "version": "1.0.0",
  "description": "Shared Zod validation schemas for frontend and backend",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./auth": {
      "import": "./dist/auth.mjs",
      "require": "./dist/auth.js",
      "types": "./dist/auth.d.ts"
    },
    "./user": {
      "import": "./dist/user.mjs",
      "require": "./dist/user.js",
      "types": "./dist/user.d.ts"
    },
    "./common": {
      "import": "./dist/common.mjs",
      "require": "./dist/common.js",
      "types": "./dist/common.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/auth.ts src/user.ts src/common.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/auth.ts src/user.ts src/common.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@alawein/typescript-config": "workspace:*",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0"
  },
  "peerDependencies": {
    "zod": "^3.20.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "zod",
    "validation",
    "schemas",
    "typescript"
  ],
  "license": "MIT"
}
