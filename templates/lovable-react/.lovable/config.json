{
  "$schema": "https://lovable.dev/schemas/config.json",
  "version": "1.0.0",
  "project": {
    "name": "lovable-template",
    "description": "Bidirectional Lovable.dev + Local IDE template",
    "framework": "react-vite",
    "styling": "tailwind",
    "ui_library": "shadcn"
  },
  "boundaries": {
    "lovable_owned": [
      "src/components/ui/**",
      "src/components/layout/**",
      "src/pages/**/*.tsx"
    ],
    "local_owned": [
      "src/services/**",
      "src/stores/**",
      "src/hooks/**",
      "src/lib/**",
      "src/integrations/**",
      "src/types/**"
    ],
    "shared": [
      "src/App.tsx",
      "src/main.tsx",
      "tailwind.config.*",
      "vite.config.*"
    ]
  },
  "sync": {
    "auto_merge_ui": true,
    "preserve_logic": true,
    "conflict_strategy": "local_wins_for_logic"
  },
  "deployment": {
    "provider": "vercel",
    "auto_deploy": true,
    "preview_branches": ["main", "develop", "feature/*"]
  }
}

