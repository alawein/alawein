{
  "$schema": "https://json.schemastore.org/tsconfig",
  "files": [],
  "references": [
    { "path": "./packages/api-schema" },
    { "path": "./packages/config" },
    { "path": "./packages/design-tokens" },
    { "path": "./packages/feature-flags" },
    { "path": "./packages/infrastructure" },
    { "path": "./packages/integrations" },
    { "path": "./packages/monitoring" },
    { "path": "./packages/security-headers" },
    { "path": "./packages/types" },
    { "path": "./packages/ui" },
    { "path": "./packages/utils" },
    { "path": "./platforms/llmworks" },
    { "path": "./platforms/portfolio" },
    { "path": "./platforms/qmlab" },
    { "path": "./platforms/attributa" },
    { "path": "./platforms/simcore" },
    { "path": "./platforms/liveiticonic" },
    { "path": "./platforms/repz" }
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@orchestration/*": ["tools/orchestration/*"],
      "@ai/*": ["tools/ai/*"],
      "@automation/*": ["automation/*"],
      "@lib/*": ["tools/lib/*"],
      "@devops/*": ["tools/devops/*"],
      "@cli/*": ["tools/cli/*"],
      "@types/*": ["types/*"],
      "@config/*": ["config/*"],
      "@test/*": ["tests/*"],
      "@metaHub/*": [".metaHub/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}
